<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context="com.ytfu.yuntaifawu.ui.chatroom.activity.UserChatRoomActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tl_room_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#44A2F7"
        android:minHeight="?android:attr/actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@null"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title=""
        app:titleMargin="0dp">

        <TextView
            android:id="@+id/tv_room_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="8"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="法国外籍军团" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ll_room_lawyer_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_room_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableTop="@drawable/iconfontweixin"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="律师微信号"
            android:textColor="#ff44a2f7"
            android:textSize="11sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_room_helper1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableTop="@drawable/fwh_kaitingzhushou"
            android:drawablePadding="1dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="开庭助手"
            android:textColor="#ff44a2f7"
            android:textSize="11sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#f5f5f5" />

        <TextView
            android:id="@+id/tv_room_sue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_sue"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="起诉状"
            android:textColor="#ff44a2f7"
            android:textSize="11sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#f5f5f5" />

        <TextView
            android:id="@+id/tv_room_assess"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableTop="@drawable/pingjia"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="评价Ta"
            android:textColor="#ff44a2f7"
            android:textSize="11sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#f5f5f5" />

        <TextView
            android:id="@+id/tv_room_complaint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableTop="@drawable/tousu"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="要投诉"
            android:textColor="#ff44a2f7"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_room_service_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_room_contract"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableTop="@drawable/fwh_hetongku"
            android:drawablePadding="1dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="合同库"
            android:textColor="#ff44a2f7"
            android:textSize="11sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#f5f5f5" />

        <TextView
            android:id="@+id/tv_room_statement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableTop="@drawable/fwh_qisuzhuang"
            android:drawablePadding="1dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="免费写诉状"
            android:textColor="#ff44a2f7"
            android:textSize="11sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#f5f5f5" />

        <TextView
            android:id="@+id/tv_room_helper"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableTop="@drawable/fwh_kaitingzhushou"
            android:drawablePadding="1dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="开庭助手"
            android:textColor="#ff44a2f7"
            android:textSize="11sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#f5f5f5" />

        <TextView
            android:id="@+id/tv_room_advisor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableTop="@drawable/fwh_falvguwen"
            android:drawablePadding="1dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="法律顾问"
            android:textColor="#ff44a2f7"
            android:textSize="11sp" />
    </LinearLayout>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srv_room_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_room_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <EditText
            android:id="@+id/et_room_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="@string/hint_input_send_message"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="3"
            android:textColorHint="#FF44A2F7"
            android:textSize="14sp"
            tools:text="asihdanhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwudnhdwud\nhdwud\nqsdhud\ndhioqwid\nasihda\nhdwud\nqsdhud\ndhioqwid\n" />

        <TextView
            android:id="@+id/tv_room_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/shape_btn_withdraw"
            android:paddingStart="12dp"
            android:paddingTop="4dp"
            android:paddingEnd="12dp"
            android:paddingBottom="4dp"
            android:text="@string/button_send"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>